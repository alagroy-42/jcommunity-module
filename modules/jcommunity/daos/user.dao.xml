<?xml version="1.0" encoding="iso-8859-1"?>
<dao xmlns="http://jelix.org/ns/dao/1.0">
   <datasources>
      <primarytable name="usr" realname="community_user" primarykey="login" />
   </datasources>
   <record>
      <property name="login" fieldname="login"
          required="yes" datatype="string"  maxlength="50" />

      <property name="password" fieldname="password" datatype="string"
                maxlength="50" selectmotif="%s" updatemotif="" insertmotif="%s" />
      
      <property name="status" fieldname="status" datatype="integer" />
      <!-- status :
           -2 supprimé
           -1 desactivé
           0 nouveau invalide
           1 modifié invalide
           2 activé
           -->
      <property name="email" fieldname="email"
                datatype="string" required="yes" maxlength="255" />
      
      <property name="pseudo" fieldname="pseudo"
                datatype="string" required="yes" maxlength="50" />

      <property name="keyactivate" fieldname="keyactivate"
                datatype="string" required="yes" maxlength="10" />

   </record>
   <factory>
     <method name="getByLoginPassword" type="selectfirst">
         <parameter name="login" />
         <parameter name="password" />

         <conditions>
             <eq property="login" expr="$login" />
             <eq property="password" expr="$password" />
         </conditions>
     </method>

     <method name="getByLogin" type="selectfirst">
         <parameter name="login" />

         <conditions>
             <eq property="login" expr="$login" />
         </conditions>
     </method>

     <method name="updatePassword" type="update">
         <parameter name="login" />
         <parameter name="password" />

         <values>
             <value property="password" expr="$password"/>
         </values>
         <conditions>
             <eq property="login" expr="$login" />
         </conditions>
     </method>

     <method name="deleteByLogin" type="delete">
         <parameter name="login" />
         <conditions>
             <eq property="login" expr="$login" />
         </conditions>
     </method>

     <method name="findByLogin" type="select">
         <parameter name="pattern" />
         <conditions>
             <like property="login" expr="$pattern" />
         </conditions>
         <order>
             <orderitem property="login" way="asc" />
          </order>
     </method>
     <method name="findAll" type="select">
         <order>
             <orderitem property="login" way="asc" />
         </order>
     </method>
   </factory>
</dao>
